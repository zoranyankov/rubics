<main>
    <h1>{{name}}</h1>
    <img class="cube" src="{{imageUrl}}">
    <div class="details">
        <p><span>Description:</span>{{description}}</p>
        <p><span>Difficulty level:</span> {{difficultyLevel}}</p>
        <a class="btn back" href="/cubes">Back</a>
        {{#if isCreator}}
        <a class="btn edit" href="/cubes/edit/{{_id}}">Edit / Delete</a>
        <a class="btn attach" href="/accessories/{{_id}}/attach">Attach Accessory</a>
        {{/if}}
    </div>
    <h2>Accessories</h2>
    <div class="accessories">
        {{#each accessories}}
        {{>accessory}}
        {{else}}
        <h3 class="italic">This cube has no accessories yet...</h3>
        {{/each}}
    </div>
</main>